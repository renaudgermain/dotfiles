xlogin.Login.promptColor:      #eeeeec

xlogin.Login.face:             fixed-13
xlogin.Login.failFace:         fixed-13
xlogin.Login.promptFace:       fixed-13
EOF
        echo 'xsetroot -solid black' > /etc/X11/xenodm/Xsetup_0
        ;;
    rcog:gulf)
        umask 077
        ln -s .xinitrc .xsession
        mkdir $HOME/.abook

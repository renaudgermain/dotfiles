        make -C /tmp/nq PREFIX=~/usr install
        echo "TODO (from delta) ssh rcog@127.0.0.1 -p 7922 cat ~/.ssh/id_rsa.pub >> .ssh/authorized_keys"
        git clone ssh://delta:/home/rcog/src/euler/.git euler

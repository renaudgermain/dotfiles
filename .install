        go get github.com/prasmussen/gdrive # https://hub.docker.com/r/vovimayhem/gdrive/
        mv go/bin/gdrive usr/bin
        gdrive about # visit url, get code, paste code
        gdrive download 1WNJ7QCudjB6KNlMp0WgLrixYj6rPDx-e # .todo.org
        gdrive download 1EZTLgp8398ZIGhQlHq3_safi9er5TvEh --path .abook

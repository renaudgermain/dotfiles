case $(whoami):$(hostname) in
    root:alpha)
        pacman -Syu xorg-xrandr xorg-xdpyinfo mesa-demos alsa-utils git ratpoison \
               mpv rxvt-unicode xorg-{xserver,xsetver,xsetroot,xset,xinit,xdm}
